	<task:scheduled-tasks>   
 	        <task:scheduled ref="loadTopicBackInfoJob" method="doJob" cron="0 0 1 * * ?"/>
<!--  	        <task:scheduled ref="loadTopicBackInfoJob" method="doJob" cron="0 0 1 * * ?"/> -->
 	        <task:scheduled ref="loadTopicBackInfoJob" method="doloadTopicIntoTemp"  cron="0 0 0 * * ?"/> 
	</task:scheduled-tasks> 
</beans>